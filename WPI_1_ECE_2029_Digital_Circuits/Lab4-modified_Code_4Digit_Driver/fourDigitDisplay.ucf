NET "CLK" LOC = "V10" ; # system clock

#Input switches - there aren't enough switches on the board to connect to the inputs, so there may be some unexpected results


	#for displaying to base 4 digits
NET "Z[0]" LOC = "T10";
NET "Z[1]" LOC = "T9";

NET "Y[0]" LOC = "V9";
NET "Y[1]" LOC = "M8";

NET "X[0]" LOC = "N8";
NET "X[1]" LOC = "U8";

NET "W[0]" LOC = "V8";
NET "W[1]" LOC = "T5";


